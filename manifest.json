{
  "name": "Hold That Thought",
  "version": "1.0",
  "description": "Enter Hold That Thought description here.",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "javascript/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "javascript/content.js" ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      }
    }
  },
  "web_accessible_resources": [
    "images/*",
    "views/*",
    "css/*"
  ]
}
